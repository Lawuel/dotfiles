{
  "layer": "top",
  "position": "top",
  "modules-left": ["group/leftModules"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["group/rightModules"],

  /* *************************************************** */
  /* **************** MODULES-MAIN-GROUPS ************** */
  /* *************************************************** */

  "group/leftModules": {
    "orientation": "horizontal",
    "modules": ["group/power", "bluetooth", "network"]
  },

  "group/rightModules": {
    "orientation": "horizontal",
    "modules": ["backlight", "wireplumber", "cpu", "memory", "user", "clock"]
  },

  /* ******************************************** */
  /* **************** MODULES-LEFT ************** */
  /* ******************************************** */

  "group/power": {
    "orientation": "horizontal",
    "modules": [
      "custom/showPowerOptions",
      "custom/sleep",
      "custom/reboot",
      "custom/shutdown",
      "custom/logout"
    ],
    "drawer": {
      "click-to-reveal": true,
      "transition-left-to-right": true
    }
  },

  "custom/showPowerOptions": {
    "format": "󰀄",
    "tooltip": false
  },

  "custom/sleep": {
    "format": "󰤄",
    "on-click": "systemctl suspend",
    "tooltip": false
  },

  "custom/reboot": {
    "format": "󰜉",
    "on-click": "reboot",
    "tooltip": false
  },

  "custom/shutdown": {
    "format": "󰐥",
    "on-click": "poweroff",
    "tooltip": false
  },

  "custom/logout": {
    "format": "󰍃",
    "on-click": "hyprctl dispatch exit",
    "tooltip": false
  },

  "bluetooth": {
    "controller": "blueman",
    "on-click": "blueman-manager",
    "format": "󰂯",
    "format-off": "󰂲",
    "format-disabled": "󰂲",
    "format-connected": "󰂱",
    "tooltip-format": "{device_alias} {device_battery_percentage}%"
  },

  "network": {
    "on-click": "nm-connection-editor",
    "format-disconnected": "󰤮",
    "tooltip-format": "{essid} {signalStrength}%",
    "format": "{icon}",
    "format-icons": ["󰤟", "󰤢", "󰤥", "󰤨"]
  },

  /* ********************************************** */
  /* **************** MODULES-CENTER ************** */
  /* ********************************************** */

  "hyprland/workspaces": {
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "urgent": "󰮕",
      "active": "󰝥",
      "default": "󰝦"
    }
  },

  /* ********************************************* */
  /* **************** MODULES-RIGHT ************** */
  /* ********************************************* */

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["󱩎", "󱩏", "󱩐", "󱩑", "󱩒", "󱩓", "󱩔", "󱩕", "󱩖", "󰛨"]
  },

  "wireplumber": {
    "on-click": "pavucontrol",
    "format-muted": "{volume}% 󰝟",
    "format": "{icon} {volume}%",
    "format-icons": ["󰕿", "󰖀", "󰕾"]
  },

  "cpu": {
    "interval": 15,
    "format": "󰙅 {usage}%"
  },

  "memory": {
    "interval": 15,
    "format": "󰌨 {percentage}%"
  },

  "user": {
    "format": "{work_H}:{work_M}"
  },

  "clock": {
    "format": "{:%I:%M}",
    "tooltip-format": "{:%a %b %d, %Y}"
  }
}
